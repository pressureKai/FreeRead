<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cover"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/book_name"
        android:textStyle="bold"
        android:textColor="@color/app.font.color"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/book_descriptor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/book_descriptor"
        android:lines="5"
        android:ellipsize="end"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/app.font.second.color"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/book_name"
        app:layout_constraintLeft_toLeftOf="@+id/book_name"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_weight="1"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>