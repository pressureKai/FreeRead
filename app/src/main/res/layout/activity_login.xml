<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:fillViewport="true">


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/login_lottie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/login_content"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="login_background.json"
                app:lottie_loop="true" />


            <View
                android:id="@+id/login_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/login_gradient_drawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_lottie"
                app:layout_constraintVertical_weight="1" />


            <androidx.cardview.widget.CardView
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/login.card.background.color"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/account_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/login_edit"
                        app:hintAnimationEnabled="true">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/account"
                            android:maxLength="13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/account_describer" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintTop_toBottomOf="@+id/account_layout"
                        android:id="@+id/password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:theme="@style/login_edit"
                        app:hintAnimationEnabled="true">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password_describer"
                            android:inputType="textPassword"
                            android:maxLength="6" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:id="@+id/forget_password"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password_layout"
                        android:textColor="@color/app.font.second.color"
                        android:text="@string/forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/register"
                        android:textColor="@color/app.font.second.color"
                        app:layout_constraintTop_toBottomOf="@id/password_layout"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/register_describer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>




                    <Button
                        android:id="@+id/login"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/register"
                        android:text="@string/login"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_button_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>