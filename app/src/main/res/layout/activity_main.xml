<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.classic.common.MultipleStatusView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.classic.common.MultipleStatusView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>



    <View
        android:id="@+id/shadow_view"
        android:background="@color/draw.layout.background"
        android:layout_width="match_parent"
        android:alpha="0"
        android:layout_height="match_parent"/>



    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/draw_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:openDrawer="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/draw_content"
            android:layout_gravity="left"
            android:background="@color/app_background"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/userHead"
                    android:src="@drawable/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/name"
                    android:maxLength="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_default"
                    android:textColor="@color/app.font.color"
                    android:textSize="16sp" />




                <ImageView
                    android:src="@drawable/app_next"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/app.draw.content.background"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <include
                        android:id="@+id/bluetooth"
                        layout="@layout/merge_draw_layout"/>


                    <include
                        android:id="@+id/wifi"
                        layout="@layout/merge_draw_layout"/>


                    <include
                        android:id="@+id/scan"
                        layout="@layout/merge_draw_layout"/>


                    <include
                        android:id="@+id/day_night_model"
                        layout="@layout/merge_draw_layout"/>

                    <include
                        android:id="@+id/font"
                        layout="@layout/merge_draw_layout"/>


                    <include
                        android:id="@+id/source"
                        layout="@layout/merge_draw_layout"/>

                    <include
                        android:id="@+id/skin"
                        layout="@layout/merge_draw_layout"/>

                    <include
                        android:id="@+id/setting"
                        layout="@layout/merge_draw_layout"/>

                    <include
                        android:id="@+id/about"
                        layout="@layout/merge_draw_layout"/>


                    <include
                        android:id="@+id/un_register"
                        layout="@layout/merge_draw_layout"/>

                    <include
                        android:id="@+id/quit_app"
                        layout="@layout/merge_draw_layout"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>