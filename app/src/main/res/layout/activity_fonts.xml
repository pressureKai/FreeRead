<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    tools:context="com.kai.ui.fonts.FontsActivity">


    <include
        layout="@layout/merge_toolbar"/>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background"
            android:orientation="vertical">
            <TextView
                android:id="@+id/current_font"
                android:padding="16dp"
                android:text="当前字体"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/pop_font"
                android:padding="16dp"
                android:text="pop字体"
                fontPath="fonts/pop字体.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/hkzh_font"
                android:padding="16dp"
                android:text="华康中黑字体"
                fontPath="fonts/华康中黑字体.TTF"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>






            <TextView
                android:id="@+id/hksn_font"
                android:padding="16dp"
                android:text="华康少女字体"
                fontPath="fonts/华康少女字体.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





            <TextView
                android:id="@+id/hwxs_font"
                android:padding="16dp"
                android:text="华文新宋字体"
                fontPath="fonts/华文新宋.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





            <TextView
                android:id="@+id/hwxk_font"
                android:padding="16dp"
                android:text="华文行楷字体"
                fontPath="fonts/华文行楷.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/wqywmh_font"
                android:padding="16dp"
                android:text="文泉驿微米黑字体"
                fontPath="fonts/文泉驿微米黑.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/fzzy_font"
                android:padding="16dp"
                android:text="方正准圆字体"
                fontPath="fonts/方正准圆.TTF"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>











            <TextView
                android:id="@+id/fzzyuan_font"
                android:padding="16dp"
                android:text="方正正圆字体"
                fontPath="fonts/方正正圆.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>







            <TextView
                android:id="@+id/ml_font"
                android:padding="16dp"
                android:text="明兰字体"
                fontPath="fonts/明兰.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/kt_font"
                android:padding="16dp"
                android:text="楷体字体"
                fontPath="fonts/楷体.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





            <TextView
                android:id="@+id/pglh_font"
                android:padding="16dp"
                android:text="苹果丽黑字体"
                fontPath="fonts/苹果丽黑.ttf"
                android:textColor="@color/app.font.color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</LinearLayout>