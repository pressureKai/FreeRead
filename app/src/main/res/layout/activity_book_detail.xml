<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tip_paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.kai.bookpage.page.PageView
            android:id="@+id/pageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <View
            android:id="@+id/shadow_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/draw.layout.background" />


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/draw_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:openDrawer="left">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/draw_content"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app.draw.content.background">

                <LinearLayout
                    android:id="@+id/function_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_4">

                        <TextView
                            android:id="@+id/order_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_up_chapter_list"
                            android:textColor="@color/app.font.color" />


                    </LinearLayout>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/draw_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/function_layout"
                    app:layout_constraintVertical_weight="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.drawerlayout.widget.DrawerLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:id="@+id/function_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/merge_toolbar"/>

        <View

            android:id="@+id/translation_layout"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_layout"
            android:background="@drawable/shape_radius_dp_14"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/current_chapter"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/app.font.color"
                android:text="@string/book_set_chapter"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/chapter_progress"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/current_chapter"
                app:isb_thumb_color="@color/login.edit.line.color.normal"
                app:isb_indicator_color="@color/app_background"
                app:isb_indicator_text_color="@color/app.font.color"
                app:isb_track_progress_color="@color/login.edit.line.color.normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                app:layout_constraintTop_toBottomOf="@+id/chapter_progress"
                android:id="@+id/brightness_follow_system"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/app.font.color"
                android:text="@string/book_brightness_follow_system"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <CheckBox
                android:layout_marginRight="32dp"
                android:id="@+id/brightness_follow_system_checkbox"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/brightness_follow_system"
                app:layout_constraintBottom_toBottomOf="@id/brightness_follow_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/brightness_progress"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/brightness_description"
                app:layout_constraintTop_toBottomOf="@id/brightness_follow_system"
                app:isb_thumb_color="@color/login.edit.line.color.normal"
                app:isb_indicator_color="@color/app_background"
                app:isb_indicator_text_color="@color/app.font.color"
                app:isb_track_progress_color="@color/login.edit.line.color.normal"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/brightness_description"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/brightness_progress"
                app:layout_constraintTop_toTopOf="@+id/brightness_progress"
                app:layout_constraintBottom_toBottomOf="@+id/brightness_progress"
                android:textColor="@color/app.font.color"
                android:text="@string/book_brightness"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <TextView
                android:id="@+id/current_size"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/brightness_description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/app.font.color"
                android:text="@string/book_current_size"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/size_progress"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/size_description"
                app:layout_constraintTop_toBottomOf="@id/current_size"
                app:isb_thumb_color="@color/login.edit.line.color.normal"
                app:isb_indicator_color="@color/app_background"
                app:isb_indicator_text_color="@color/app.font.color"
                app:isb_track_progress_color="@color/login.edit.line.color.normal"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/size_description"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/size_progress"
                app:layout_constraintTop_toTopOf="@+id/size_progress"
                app:layout_constraintBottom_toBottomOf="@+id/size_progress"
                android:textColor="@color/app.font.color"
                android:text="@string/book_size"
                android:textSize="16sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <LinearLayout
                android:id="@+id/page_mode_layout"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/size_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/simulation"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/simulation"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/read_page_mode_un_selected"
                    android:textColor="@color/app.font.color"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/cover"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/cover"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/read_page_mode_un_selected"
                    android:textColor="@color/app.font.color"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/scroll"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/scroll"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/read_page_mode_un_selected"
                    android:textColor="@color/app.font.color"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/slide"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/slide"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/read_page_mode_un_selected"
                    android:textColor="@color/app.font.color"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/none"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/none"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@drawable/read_page_mode_selected"
                    android:textColor="@color/app.font.color"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/background_list"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/page_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>